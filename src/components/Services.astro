---
const services = [
  {
    image: "/img/services/firepit.jpg",
    alt: "Hardscape fire pit installation",
    title: "Hardscaping Raleigh NC",
    description: "Professional hardscape installation in Raleigh including custom patios, retaining walls, walkways, fire pits, and outdoor living spaces. Transform your property with durable stone and concrete features."
  },
  {
    image: "/img/services/landscape.jpg",
    alt: "Professional landscape design",
    title: "Landscape Design Raleigh",
    description: "Custom landscape design services for Raleigh homes and businesses. Expert plant selection, garden layout, outdoor lighting design, and irrigation planning tailored to North Carolina's climate."
  },
  {
    image: "/img/services/sprinkler.jpg",
    alt: "Irrigation and water systems installation",
    title: "Irrigation Systems Raleigh",
    description: "Professional irrigation and water system installation in Raleigh NC. Sprinkler systems, drip irrigation, rainwater harvesting, and smart watering solutions for efficient landscape management."
  },
  {
    image: "/img/services/lighting.png",
    alt: "Outdoor landscape lighting",
    title: "Landscape Lighting Raleigh",
    description: "Professional outdoor lighting installation for Raleigh properties. Garden lighting, pathway illumination, security lighting, and accent lighting to enhance your landscape's beauty and safety."
  },
  {
    image: "/img/services/lawn.jpg",
    alt: "Lawn and garden bed maintenance",
    title: "Lawn Care Raleigh NC",
    description: "Comprehensive lawn care and garden maintenance services in Raleigh. Professional mowing, fertilization, weed control, flower bed maintenance, and seasonal cleanup for beautiful year-round landscapes."
  },
  {
    image: "/img/services/sod.jpg",
    alt: "Professional sod installation",
    title: "Sod Installation Raleigh",
    description: "Professional sod installation services in Raleigh NC. Premium grass varieties suitable for North Carolina climate. Quick establishment of beautiful, durable lawns for residential and commercial properties."
  },
  {
    image: "/img/services/cleanup.jpg",
    alt: "Landscape cleanup and mulching services",
    title: "Landscape Cleanup Raleigh",
    description: "Seasonal landscape cleanup and mulching services in Raleigh NC. Leaf removal, debris cleanup, bed edging, mulch installation, and property preparation for every season."
  },
  {
    image: "/img/services/pruning.jpg",
    alt: "Professional tree pruning services",
    title: "Tree Pruning Raleigh NC",
    description: "Professional tree and shrub pruning services in Raleigh. Expert trimming, shaping, and health maintenance for all tree species. Promote healthy growth and maintain your landscape's beauty."
  }
];
---

<!-- Services Section -->
<section id="services" class="py-24 bg-gradient-to-br from-green-600 to-green-800 relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>
  
  <div class="px-6 lg:px-8 max-w-7xl mx-auto relative">
    <!-- Header -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-white/20 backdrop-blur-sm rounded-2xl mb-6">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
      </div>
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 tracking-tight">
        Expert Landscaping
        <span class="block text-green-200">Services</span>
      </h2>
      <p class="text-xl text-green-100 max-w-3xl mx-auto leading-relaxed">
        Transform your outdoor space with our comprehensive landscaping solutions. 
        Licensed, bonded, and trusted in the Triangle area since 2005.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      {services.map((service, index) => (
        <div class="group relative">
          <!-- Card -->
          <div class="bg-white/10 backdrop-blur-sm rounded-3xl p-8 border border-white/20 hover:bg-white/15 transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl hover:shadow-green-900/25">
            <!-- Image -->
            <div class="relative mb-6 overflow-hidden rounded-2xl aspect-square">
              <img 
                src={service.image}
                alt={service.alt}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
            </div>
            
            <!-- Content -->
            <div class="space-y-4">
              <h3 class="text-xl font-bold text-white group-hover:text-green-200 transition-colors duration-300">
                {service.title}
              </h3>
              <p class="text-green-100 text-sm leading-relaxed">
                {service.description}
              </p>
              
            </div>
          </div>
          
          <!-- Hover glow effect -->
          <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-green-400/0 via-green-400/5 to-green-400/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-xl"></div>
        </div>
      ))}
    </div>

  </div>
</section>