<!-- Hero Section -->
<header class="relative h-screen">
  <div class="absolute inset-0">
    <img 
      src="/img/bg.jpg" 
      alt="Beautiful landscaped garden with flowers and trees" 
      class="w-full h-full object-cover"
      loading="eager"
    />
    <!-- Gradient overlay for text readability -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/50 via-black/30 to-green-900/40"></div>
  </div>
  <div class="relative z-10 flex items-center justify-center h-full">
    <div class="text-center text-white px-3 sm:px-4 max-w-4xl mx-auto">
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-4 lg:mb-6 tracking-tight">
        Garden & Art Landscapes
      </h1>
      <p class="text-lg sm:text-xl md:text-2xl mb-6 lg:mb-8 leading-relaxed opacity-95">
        Professional landscaping services using sustainable practices in Raleigh, NC since 2005
      </p>
      <a 
        href="tel:919-235-2245" 
        class="inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-4 px-8 rounded-lg text-lg transition-colors duration-300 shadow-lg"
        aria-label="Call Garden & Art Landscapes at 919-235-2245"
      >
        Call Now: 919-235-2245
      </a>
    </div>
  </div>
</header>