<!-- Contact Section -->
<section id="contact" class="py-20 bg-gray-100">
  <div class="px-6 lg:px-8 max-w-5xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
        Contact Our Raleigh Landscaping Team
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Ready to transform your outdoor space? Contact us today for a free consultation.
      </p>
    </div>

    <!-- Contact Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
      <!-- Phone Card -->
      <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 text-center group">
        <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:bg-green-200 transition-colors duration-300">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Call Us Today</h3>
        <a href="tel:919-235-2245" class="text-3xl font-bold text-green-600 hover:text-green-700 transition-colors duration-300 block mb-4">
          (919) 235-2245
        </a>
        <p class="text-gray-600 mb-2">Monday - Friday: 9:00 AM - 5:00 PM</p>
      </div>

      <!-- Email Card -->
      <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 text-center group">
        <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:bg-blue-200 transition-colors duration-300">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 3.26a2 2 0 001.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Email Us</h3>
        <a href="mailto:normanrabins@gmail.com" class="text-xl text-blue-600 hover:text-blue-700 transition-colors duration-300 block mb-4 break-all">
          normanrabins@gmail.com
        </a>
        <p class="text-blue-600 font-medium">Detailed project discussions welcome</p>
      </div>
    </div>

    <!-- Service Area -->
    <div class="text-center">
      <div class="bg-white rounded-2xl p-8 shadow-lg">
        <div class="w-16 h-16 bg-gray-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Service Areas</h3>
        <p class="text-lg text-gray-700 mb-2">Serving the Triangle Area</p>
        <p class="text-xl text-green-600 font-semibold mb-4">Raleigh • Durham • Chapel Hill • Cary • Holly Springs</p>
        <p class="text-gray-600">Licensed, bonded & insured since 2005 • NC License #1901</p>
      </div>
    </div>
  </div>
</section>